pipeline {
  options {
    buildDiscarder logRotator(artifactDaysToKeepStr: '', artifactNumToKeepStr: '', daysToKeepStr: '7', numToKeepStr: '5')
  }
  agent {
    node {
      label 'docker'
    }
  }
  environment {
    NPM_TOKEN = credentials('moelab-npm-token')
  }
  stages {
    stage('Build es-home') {
      agent {
        docker {
          image "node:14"
        }
      }
      steps {
        withNPM(npmrcConfig: "npmrc-moelab") {
          dir("es-home") {
            sh 'cp ../.npmrc'
            sh 'npm ci'
            sh 'npm run build'
          }
        }
      }
    }
  }
}
