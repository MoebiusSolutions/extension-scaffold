  options {
    buildDiscarder logRotator(artifactDaysToKeepStr: '', artifactNumToKeepStr: '', daysToKeepStr: '7', numToKeepStr: '5')
  }
  agent {
    node {
      label 'jenkins-2'
    }
  }
  environment {
    NPM_CONFIG_USERCONFIG = credentials('build-moesol-npm-repository_gccsje')
