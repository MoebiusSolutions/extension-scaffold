  stages {
    stage('Build es-home') {
      steps {
        sh 'NOSUDO=1 ./es-home/deploy/build-prod-container.sh --mount type=bind,source="${WORKSPACE}/moelab/etc/ssl/certs",target=/etc/ssl/certs'
      }
    }
  }
}
