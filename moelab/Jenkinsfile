pipeline {
  options {
    buildDiscarder logRotator(artifactDaysToKeepStr: '', artifactNumToKeepStr: '', daysToKeepStr: '7', numToKeepStr: '5')
  }
  agent {
    node {
      label 'docker'
    }
  }
  stages {
    stage('Build es-home') {
      agent {
        docker {
          image "node:14"
        }
      }
      steps {
        script {
          dir("es-home") {
            sh 'npm ci'
          }
        }
      }
    }
  }
}
